<html>
{{ >head }}

<body>
    {{ >nav }}
<main class="my-5">
    <h4 class="display-4">Utilizadores</h4>
    <table id="usersTable" class="table table-striped table-bordered rounded">
        <tbody>
            <tr>
                <td>ID</td>
                <td>Email</td>
                <td>Primeiro Nome</td>
                <td>Apelido</td>
                <td>Contacto</td>
                <td>Tipo de Utilizador</td>
                <td></td>
                <td></td>
            </tr>
           {{ #users  }}
           <tr>
                <td>{{ id }}</td>
                <td>{{ email  }}</td>
                <td>{{ firstName  }}</td>
                <td>{{ lastName  }}</td>
                <td>{{ contacto  }}</td>
                <td>{{ userTypeId  }}</td>
                <td><i class="fas fa-user-minus" title="Apagar" onclick="info.deleteUser({{ id }})"
                        aria-hidden="true"></i><span class="sr-only">Apagar</span></td>
                <td><i class="fas fa-user-edit" title="Editar" data-toggle="modal" data-target="#updateModal"
                        onclick="info.carregarUtilizadorModal({{ id }})" aria-hidden="true"></i><span
                        class="sr-only">Editar</span></td>
            </tr>
             {{ /users  }}
        </tbody>
    </table>
</main>
    </body>
</html>